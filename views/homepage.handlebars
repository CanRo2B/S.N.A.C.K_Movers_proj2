                      <label class="form-label text-white" for="form1">State</label>
                    </div>
                  </div>
                  <div class="col-md-4 mb-3 mb-md-0">
                    <div class="form-outline form-white">
                      <!-- TODO: change id to something not as generic -->
                      <input type="text" id="zipcode" placeholder="Please enter a zipcode"
                        class="form-control form-control-lg">
                      <label class="form-label text-white" for="form2">Zip Code</label>
                    </div>
                  </div>
                  <div class="col-md-2">
                    <button class="btn btn-info btn-block btn-lg" id="location">Search</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
<script src="/js/categories.js"></script>
